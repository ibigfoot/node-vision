
<div class="slds-grid slds-wrap  slds-grid--align-center">
	<div class="slds-col slds-size--1-of-3 slds-form-element slds-m-top--large">
		<label class="slds-form-element__label" for="imageUrl">URL of Image</label>
		<div class="slds-form-element__control">
			<input id="imageUrl" class="slds-input" type="text" placeholder="Grab an image from the internet!!" />
			<button id="imageDescribeBtn" class="slds-button slds-button--neutral slds-m-top--large">Tell Me About My Image</button>
			<div id="spinner" class="slds-spinner_container" style="display:none">
  				<div class="slds-spinner slds-spinner--medium" role="alert">
    				<span class="slds-assistive-text">Loading</span>
    				<div class="slds-spinner__dot-a"></div>
    				<div class="slds-spinner__dot-b"></div>
  				</div>
			</div>
		</div>
	</div>	
</div>
<div id="responses" class="slds-grid slds-wrap slds-grid--align-center"></div>

{{! 
	Handlebars Template. The '\' character is required so when the express precomiles templates it 
	leaves this here for the client side template engine to work it's magic
}}
<script id="labelAnnotationsTemplate" type="text/x-handlebars-template">
	<div class="slds-col slds-size--1-of-3 slds-m-top--x-large slds-m-bottom--x-large">
		<img src="\{{imgSrc}}"/>
	</div>
	<div class="slds-col slds-size--1-of-3 slds-m-top--x-large slds-m-bottom--x-large">	
		<table class="slds-table slds-table--bordered slds-table--cell-buffer">
  			<thead>
    			<tr class="slds-text-title--caps">
      				<th scope="col">
        				<div class="slds-truncate" title="Description">Description</div>
      				</th>
      				<th scope="col">
        				<div class="slds-truncate" title="Score">Score</div>
      				</th>
    			</tr>
  			</thead>
  			<tbody>
				\{{#data.responses}} 
					\{{#labelAnnotations}}
    					<tr>
      						<td data-label="Description">
								<div class="slds-truncate" title="description">\{{description}}</div>
      						</td>
      						<td data-label="Score">
								<div class="slds-truncate" title="\{{score}}">\{{score}}</div>
      						</td>
    					</tr>
					\{{/labelAnnotations}}
				\{{/data.responses}}
  			</tbody>
		</table>
	</div>
</script>